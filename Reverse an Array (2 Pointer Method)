// reversing array ( 2 pointer method )

#include <iostream>
using namespace std;
int reverseArray(int arr[],int size){
    int strt=0,end =size-1;
    while(strt < end){
        swap (arr[strt],arr[end]);
        strt++;
        end--;

    }
}


int main()
{
  int arr[5] = {1,2,3,4,5};
  cout << "After reversing the array: ";
  reverseArray(arr,5);
  for(int i=0;i<5;i++) {
        cout << arr[i] << " ";
  }
  return 0;  
}
